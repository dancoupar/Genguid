<Window x:Class="Genguid.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Genguid.UI"
        mc:Ignorable="d"
        Title="Genguid"
		SizeToContent="WidthAndHeight">
	<Window.Resources>
		<local:MainWindowViewModel x:Key="MainVM" />
	</Window.Resources>
	<Grid Margin="20,20,20,20" RenderTransformOrigin="0,0">
		<StackPanel>
			<Label x:Name="numberLabel" ContentStringFormat="#{0}" Content="{Binding SequenceNumber, Mode=OneWay, Source={StaticResource MainVM}}" FontFamily="#Oxygen Mono" />
			<Label x:Name="guidLabel" Content="{Binding CurrentGuid, Mode=OneWay, Source={StaticResource MainVM}}" HorizontalAlignment="Left" Margin="30,30,30,80" FontFamily="#Oxygen Mono" FontSize="20pt" />
		</StackPanel>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
			<Button x:Name="previousButton" Content="Previous" Height="30" Width="100" DockPanel.Dock="Right" Command="{Binding PreviousButtonClick, Mode=OneWay, Source={StaticResource MainVM}}"/>
			<Button x:Name="nextButton" Content="Next" Padding="10,5,10,5" Margin="10,0,0,0" Height="30" Width="100" DockPanel.Dock="Right" Command="{Binding NextButtonClick, Mode=OneWay, Source={StaticResource MainVM}}"/>
		</StackPanel>
	</Grid>
</Window>
